            "definition": "https://raw.githubusercontent.com/t-anba/azure-resource-manager-schemas/t-anbaAzSDeploymentTemplate/schemas/2015-08-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2015-05-01-preview",
                "location": "West Us",
                "properties": {
                }
            }
        },

        {
            "name": "storageAccounts - Without properties property",
            "expectedErrors": [
                {
                    "message": "Missing required property: properties",
                    "dataPath": "/"
                }
            ],
            "definition": "https://raw.githubusercontent.com/t-anba/azure-resource-manager-schemas/t-anbaAzSDeploymentTemplate/schemas/2015-08-01/Microsoft.Storage.json#/resourceDefinitions/storageAccounts",
            "json": {
