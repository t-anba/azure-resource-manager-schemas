{
  "tests": [
    {
      "name": "Managed Data Disk",
      "definition": "https://raw.githubusercontent.com/t-anba/azure-resource-manager-schemas/t-anbaAzSDeploymentTemplate/schemas/2018-04-01/Microsoft.Compute.json#/resourceDefinitions/disks",
      "json": {
        "type": "Microsoft.Compute/disks",
        "name": "myManagedDataDisk",
        "apiVersion": "2018-04-01",
        "location": "[variables('location')]",
        "properties": {
          "creationData": {
            "createOption": "Empty"
          },
          "accountType": "[variables('storageAccountType')]",
          "diskSizeGB": 64
        }
      }
    },
    {
      "name": "Snapshots",
      "definition": "https://raw.githubusercontent.com/t-anba/azure-resource-manager-schemas/t-anbaAzSDeploymentTemplate/schemas/2018-04-01/Microsoft.Compute.json#/resourceDefinitions/snapshots",
      "json": {
        "type": "Microsoft.Compute/snapshots",
        "name": "myManagedDataDiskSnapshot",
        "apiVersion": "2018-04-01",
        "location": "[variables('location')]",
        "properties": {
          "creationData": {
            "createOption": "Copy",
            "sourceUri": "[resourceId('Microsoft.Compute/disks','myManagedDataDisk')]"
          }
        },
        "dependsOn": [
          "[concat('Microsoft.Compute/disks/', 'myManagedDataDisk')]",
          "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'))]"
        ]
      }
    }
  ]
}