{
    "tests": [
        {
            "name": "jobs - custom with all features",
            "definition": "https://raw.githubusercontent.com/t-anba/azure-resource-manager-schemas/t-anbaAzSDeploymentTemplate/schemas/2018-03-01/Microsoft.BatchAI.json#/resourceDefinitions/jobs",
            "json": {
                "type": "Microsoft.BatchAI/jobs",
                "name": "custom",
                "apiVersion": "2018-03-01",
                "location": "East US",
                "properties": {
                    "cluster": {
                        "id": "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/demorg/providers/Microsoft.BatchAI/clusters/cluster"
                    },
                    "nodeCount": 1,
                    "environmentVariables": [
                        {
                            "name": "ENV",
                            "value": "Value"
                        }
                    ],
                    "secrets": [
                        {
                            "name": "SECRET",
                            "value": "secret"
                        }
                    ],
                    "priority": 0,
                    "jobPreparation": {
                        "commandLine": "echo hi"
                    },
                    "stdOutErrPathPrefix": "$AZ_BATCHAI_MOUNT_ROOT/afs",
                    "mountVolumes": {
                        "azureFileShares": [
                            {
                                "accountName": "mystorageaccnt",
                                "azureFileUrl": "https://mystorageaccnt.file.core.windows.net/share",
                                "relativeMountPath": "afs",
                                "credentials": {
                                    "accountKey": "secret"
                                }
                            }
                        ],
                        "azureBlobFileSystems": [
                            {
                                "accountName": "mystorageaccnt",
                                "containerName": "container",
                                "relativeMountPath": "bfs",
                                "credentials": {
                                    "accountKey": "secret"
                                }
                            }
                        ]
                    },
                    "customToolkitSettings": {
                        "commandLine": "echo hi"
                    }
                }
            }
        },
